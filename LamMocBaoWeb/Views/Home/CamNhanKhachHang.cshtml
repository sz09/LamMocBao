<div class="pb-3 pt-3">
    <div class="title">
        <h4>CẢM NHẬN CỦA KHÁCH HÀNG CÙNG LÂM NGỌC BẢO</h4>
    </div>
    <div id="myCarouselComment" class="carousel slide w-100 mt-2" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            <div class="carousel-inner" role="listbox">
                @if (Convert.ToInt32(@Context.Request.Cookies.FirstOrDefault(d => d.Key == "userdevice").Value) <= 390)
                {
                    @foreach (var row in (ViewBag.CustomerCommentRows as IEnumerable<IEnumerable<Shared.Models.CustomerComment>>).Select((items, index) => new { items, index }))
                    {
                        <div class="carousel-item @(row.index == 0 ? "active": "")">
                            <div class="row">
                                @foreach (var item in row.items)
                                {
                                    <div class="col-6">
                                        <a>
                                            <img class="card-img-top" src="@item.UploadedImage?.Url" alt="@item.Hint">
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    @foreach (var row in (ViewBag.CustomerCommentRows as IEnumerable<IEnumerable<Shared.Models.CustomerComment>>).Select((items, index) => new { items, index }))
                    {
                        <div class="carousel-item @(row.index == 0 ? "active": "")">
                            <div class="row">
                                @foreach (var item in row.items)
                                {
                                    <div class="col-md-3">
                                        <a>
                                            <img class="card-img-top" src="@item.UploadedImage?.Url" alt="@item.Hint">
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }

            </div>
            <a class="carousel-control-prev" href="#myCarouselComment" role="button" data-slide="prev">
                <span class="fa fa-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarouselComment" role="button" data-slide="next">
                <span class="fa fa-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>