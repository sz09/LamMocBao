@using LamMocBaoWeb.Resources
@using LamMocBaoWeb.ViewModels
@using Shared.Utilities
@using System.Web
@using LamMocBaoWeb.Utilities
@using System.Collections
@using System.Linq

@model ResultListView<Shared.Models.PublishedKnowledge>

@{
    ViewData["Title"] = @Resource.Label_Knowledge;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="step-title mb-3">
    <h4>KIẾN THỨC MỚI</h4>
</div>
<div class="row col-12 m-auto">
    <div class="col-md-8 col-12 p-0">
        @foreach (var knowledge in Model.Data)
        {
            <div class="custom-filter-knowledge-group">
                <a href="kien-thuc/@knowledge.LinkName">
                    <p class="custom-filter-knowledge-date">@(knowledge.ModifiedAt ?? knowledge.CreatedAt)</p>
                    <h4 class="color-text">@knowledge.Name</h4>
                    <div class="row col-12">
                        <div class="custom-filter-knowledge-img col-4">
                            <img src="@knowledge.UploadedImage.Url" />
                        </div>
                        <div class="custom-filter-knowledge-content col-8">@knowledge.Summary</div>
                    </div>
                </a>
            </div>
        }
        @Html.Raw(HttpUtility.HtmlDecode(PageUtitlities.Pagination(Model.MaxPage, ViewBag.Page)))
    </div>

    <div class="line-through"></div>

    @await Html.PartialAsync("ListLinkKnowledge.cshtml")

</div>

